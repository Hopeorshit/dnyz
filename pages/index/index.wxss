.banner {
  position: relative;
}

.bannerImg {
  width: 750rpx;
  height: 350rpx;
}

.menu {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
}

.menu image {
  width: 50rpx;
  height: 50rpx;
}



.process {
  padding: 90rpx 0;
  display: flex;
  justify-content: center;
}

.processDetail {
  display: flex;
  flex-direction: row;
  margin: 40rpx 0;
}

.imgProcess {
  width: 80rpx;
  height: 80rpx;
  margin-right: 36rpx;
}

.textProcess {
  display: flex;
  flex-direction: column;
}

.textStep {
  font-size: 16px;
  font-weight: bolder;
}

.textDetail {
  font-size: 14px;
  color: gray;
}

/*以下是订单列表页面 
 */
.content {
  padding: 20rpx 0;
}
.box{
  margin: 0 20rpx ;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}
.box-v {
  display: flex;
  flex-direction: column;
}
.box-v>view {
  margin: 10rpx 0;
}
.take-v {
  display: flex;
  justify-content: space-between;
  align-items: center;
}


