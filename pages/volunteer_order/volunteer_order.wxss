.banner image {
  width: 750rpx;
  height: 300rpx;
}

.singleorder {
  width: 85%;
  margin: 20rpx auto;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.orderstatus {
  /* color:#6d89f2; */
  margin-top: 20rpx;
}

.callNumber {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #cecece;
  padding-bottom: 20rpx;
}

.callNumber image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 200rpx;
}

.myOrderText {
  display: flex;
  flex-direction: column;
  /* border-bottom: 1px solid black; */

}

.myOrderText text {
  margin-top: 20rpx;
}

.mark {
   color: #73b3d5;
}

.tip {
  font-size: 12px;
  color: #cacaca;
  margin-left: 20rpx;
}
